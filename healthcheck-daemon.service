[Unit]
Description=Perform healthcheck at regular intervals
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=hcusr
DynamicUser=yes
RuntimeDirectory=hcdaemon
WorkingDirectory=/srv/services/healthcheck/service
ExecStart=/srv/services/healthcheck/.venv/bin/python /srv/services/healthcheck/service/healthcheck_daemon.py /srv/services/healthcheck/service/config.json
ExecStop=kill -s SIGUSR1 "$MAINPID"
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
